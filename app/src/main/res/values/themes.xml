<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipCalculateHust" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="TextLabel_Normal_With_ClearTextIcon" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/gray_1</item> <!-- màu của text -->
        <item name="colorControlActivated">@color/gray_1</item> <!-- màu của text -->
        <item name="colorControlHighlight">@color/gray_1</item>
        <item name="boxStrokeColor">@color/gray_1</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="background">@color/transparent</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="hintTextColor">@color/gray_1</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_ED1C24</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>